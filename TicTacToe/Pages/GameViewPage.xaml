<Page x:Class="TicTacToe.Pages.GameViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameViewPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="6*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="StateText" Text="Player 1 Turn" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <Grid x:Name="GameGrid" Grid.Row="1" />

        <Button Content="Leave" Grid.Row="2" Margin="15" Command="BrowseBack" />
        <Grid Grid.Row="1"/>
    </Grid>
</Page>
