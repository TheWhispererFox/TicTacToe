<Page x:Class="TicTacToe.Pages.BoardSizePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BoardSizePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Content="3x3 (Small)" FontSize="18" Grid.Row="0" Margin="15" Click="SmallBtn_Click" />
        <Button Content="4x4 (Medium)" FontSize="18" Grid.Row="1" Margin="15" Click="MediumBtn_Click" />
        <Button Content="5x5 (Large)" FontSize="18" Grid.Row="2" Margin="15" Click="LargeBtn_Click" />
    </Grid>
</Page>
